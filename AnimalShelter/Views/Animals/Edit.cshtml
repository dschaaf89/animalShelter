@{
  Layout = "_Layout";
}

@model AnimalShelter.Models.Animal

<h2>Edit</h2>

<h4>Edit this animal entry: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.AnimalId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)
    @Html.LabelFor(model => model.Breed)
    @Html.EditorFor(model => model.Breed)
    @Html.LabelFor(model => model.DateAdmitted)
    @Html.EditorFor(model => model.DateAdmitted)

    <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to animals", "Index")</p>