@{
  Layout = "_Layout";
}

@model AnimalShelter.Models.Animal

<h4>Add an Animal</h4>
<div class="row">
  <div class="col-6">
  @using (Html.BeginForm())
    {
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name, new { @type="text", @class = "form-control input" }) <br>
      @Html.LabelFor(model => model.Gender)
      @Html.TextBoxFor(model => model.Gender, new { @type="text", @class = "form-control input" })<br>
      @Html.LabelFor(model => model.Breed)
      @Html.TextBoxFor(model => model.Breed, new { @type="text", @class = "form-control input" })<br>
      @Html.LabelFor(model => model.DateAdmitted)
      @Html.TextBoxFor(model => model.DateAdmitted, new { @type="date", @class = "form-control datepicker input" } )
      <input type="submit" value="Add Animal" class="btn btn-info buttons" />
    }
  </div>
</div>



<p>@Html.ActionLink("Show all animals", "Index")</p>